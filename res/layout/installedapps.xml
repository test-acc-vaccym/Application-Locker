<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/commonbackground"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".InstalledApps"
    tools:ignore="UselessLeaf,ContentDescription" >
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:orientation="horizontal" >
        
    <ImageButton
        android:id="@+id/backallpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:paddingLeft="10dip"
        android:src="@drawable/backallpagebutton" 
        android:layout_marginTop="5dp"/>

    </RelativeLayout>
    
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="25"
        android:orientation="vertical"
        ></LinearLayout>
    
    <ListView
        android:id="@+id/installedappslist"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="60" >
    </ListView>

    <ImageButton
        android:id="@+id/ok"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@null"
        android:layout_gravity="center"
        android:src="@drawable/okbuttonselector" />
<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="5"
        android:orientation="vertical"
        ></LinearLayout>
</LinearLayout>